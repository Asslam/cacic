{% extends 'CacicCommonBundle::base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ "Sistemas Operacionais"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">
   <div class="span12">
      <div class="box grad_colour_black">

         <h2 class="box_head round_top"><i class="icon-cog"></i> {{ "Sistemas Operacionais"|trans }}</h2>

         <div class="block box_content round_bottom padding_10">

            <h3>{{ "Lista de Sistemas Operacionais cadastrados"|trans }}</h3>
            <p>{{ "Neste módulo deverão ser cadastrados os Sistemas Operacionais"|trans }}</p>
            <br />

           <table class="table table-striped table-bordered">
              <thead>
                <tr>
                    <th width="15%">{{ "Descrição"|trans }}</th>
                    <th width="10%" style="text-align: center" >MS-Windows?</th>
                    <th width="15%" style="text-align: center" >{{ "ID Interna"|trans }}</th>
                    <th width="10%" style="text-align: center">{{ "ID Externa"|trans }}</th>
                    <th width="15%">{{ "Sigla"|trans }}</th>
                    <th width="13%">{{ "Total de Máquinas"|trans }}</th>
                    <th width="10%">{{ "Tipo de SO"|trans }}</th>
                    <th style="text-align: center">{{ "Ações"|trans }}</th>
                </tr>
              </thead>

              <tbody>

                {% for so in So %}
                    <tr id="item_{{ so[0].idSo }}" class="{{ cycle(['row0', 'row1'], loop.index) }}">
                        <td id="item_desc_{{ so[0].idSo }}">{{ so[0].teDescSo }}</td>
                        <td style="text-align: center">{{ so[0].inMswindows |traduzFlagSimNao }}</td>
                        <td style="text-align: center">{{ so[0].teSo  }}</td>
                        <td style="text-align: center">{{ so[0].idSo }}</td>
                        <td>{{ so[0].sgSo }}</td>
                        <td style="text-align: center">
                            <a href="{{ path('cacic_relatorio_so_detalhar', {'idSo': so[0].idSo}) }}" title="{{ "Ver relatório detalhado"|trans }}" target="_blank">
                                {{ so.nComp }}
                            </a>
                        </td>
                        {% if so[0].tipo is empty %}
                            <td></td>
                        {% else %}
                            <td>{{ so[0].tipo.tipo }}</td>
                        {% endif %}
                        <td style="text-align: center" class="td-actions">
                            <a href="{{ path('cacic_sistemaoperacional_editar', {'idSo': so[0].idSo }) }}" class="btn btn-small" title="{{ "Editar Item"|trans }}">
                                <i class="btn-icon-only icon-edit icon-large"></i>
                            </a>

                            <a href="{{ path('cacic_sistemaoperacional_excluir') }}" class="btn btn-small btn-danger bt-excluir" title="{{ "Excluir Item"|trans }}">
                                <i class="btn-icon-only icon-trash icon-large"></i>
                            </a>
                            <a href="{{ path('cacic_relatorio_so_detalhar', {'idSo': so[0].idSo}) }}" class="btn btn-small" title="{{ "Ver relatório detalhado"|trans }}" target="_blank">
                                <i class="btn-icon-only icon-search icon-large"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td style="text-align: center;" colspan="7"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                    </tr>
                {% endfor %}

              </tbody>
           </table>

             {# display navigation #}
             <div class="navigation">
                 {{ knp_pagination_render(So) }}
             </div>

           <div align="right">
                <a class="btn btn-primary bt-adicionar" href="{{ path('cacic_sistemaoperacional_cadastrar') }}">
                    <i class="icon-plus-sign"></i>
                    {{ "Adicionar Sistema Operacional"|trans }}
                </a>
           </div>
         </div> <!-- /block -->
      </div><!-- /box -->

   </div><!-- /span -->
</div><!-- /row -->
{% endblock %}