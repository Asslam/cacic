        {% if configuracoes.idConfiguracao == 'nu_resolucao_grafico_h' %}
            <tr>
                <td>{{ 'Resolucao dos graficos a serem exibidos (Altura)'|trans }}</td>
                <td>
                    <input id="nu_resolucao_grafico_h" type="text" name="v" value="{{ configuracoes.vlConfiguracao }}" />
