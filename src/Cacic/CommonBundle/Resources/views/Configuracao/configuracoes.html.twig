                <td>{{ 'Resolucao dos graficos a serem exibidos (Largura)'|trans }}</td>
                <td>
                    <input id="nu_resolucao_grafico_w" type="text" name="nu_resolucao_grafico_w" value="{{ configuracoes.vlConfiguracao }}" />
                </td>
            </tr>
        {% endif %}

        {% if configuracoes.idConfiguracao == 'email_notifications' %}
            <tr>
                <td>{{ 'Habilitar envio por e-mail'|trans }}</td>
                <td>
                    {% if configuracoes.vlConfiguracao is defined %}
                        <input id="email_notifications_s" type="radio" name="email_notifications" value="S"
                               {% if ( configuracoes.vlConfiguracao == 'S' ) %}checked="checked"{% endif %}
                                />
                        <label for="email_notifications_s">Sim</label>
                        <input id="email_notifications_n" type="radio" name="email_notifications" value="N"
                               {% if ( configuracoes.vlConfiguracao == 'N' ) %}checked="checked"{% endif %}
                                />
                        <label for="email_notifications_n">{{ 'Não'|trans }}</label>
                    {% else %}
                        <input id="email_notifications_s" type="radio" name="email_notifications" value="S">
                        <label for="email_notifications_s">{{ 'Sim'|trans }}</label>
                        <input id="email_notifications_n" type="radio" name="email_notifications" value="N" checked="checked">
                        <label for="email_notifications_n">{{ 'Não'|trans }}</label>

                    {% endif %}
                </td>
            </tr>
