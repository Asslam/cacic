{% extends 'CacicCommonBundle::base.html.twig' %}

{% block breadcrumb %}     
	<li class="active">{{ "Classes WMI"|trans }}</li>
{% endblock %}

{% block body %}

<div class="row-fluid">

<div class="span12">
	<div class="box grad_colour_black">
		<h2 class="box_head round_top"><i class="icon-book"></i> {{ "Classes WMI"|trans }}</h2>
	
		<div class="block box_content round_bottom padding_10">

			<h3>{{ "Lista de classes WMI cadastradas"|trans }}</h3>
			<p>{{ "As classes listadas aqui serão coletadas pelo Agente"|trans }}</p>
			<br />

			<a class="btn btn-primary bt-adicionar" href="{{ path('cacic_wmi_classe') }}">
				<i class="icon-plus-sign"></i>
				{{ "Adicionar Classe"|trans }}
			</a>
			<br>
			<br>
            <table class="table table-striped table-bordered">

				<thead>
				<tr>
				    <th width="5%">#</th>
				    <th width="30%">{{ "Nome da Classe"|trans }}</th>
				    <th width="50%">{{ "Descrição"|trans }}</th>
					<th width="15%" style="text-align: center"></th>
			    </tr>
				</thead>
		
			  	<tbody>
			    {% for elm in classes %}
			    
					<tr id="item_{{ elm.idClass }}">
						<td>{{ loop.index }}</td>
						<td id="item_desc_{{ elm.idClass }}">{{ elm.nmClassName }}</td>
						<td>{{ elm.teClassDescription }}</td>
						<td style="text-align: center" class="td-actions">
							<a href="{{ path('cacic_wmi_classe', {'idClass': elm.idClass}) }}" class="btn btn-small" title="{{ "Editar Item"|trans }}">
								<i class="btn-icon-only icon-edit icon-large"></i>
							</a>
						</td>
					</tr>
			    
			    {% else %}
                    <tr>
                        <td style="text-align: center;" colspan="4"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
                    </tr>
				{% endfor %}
			    
			  </tbody>
			</table>

		</div> <!-- /block -->
	</div> <!-- /box -->
</div> <!-- /span -->

</div> <!-- /row -->
{% endblock %}