{% extends 'CacicRelatorioBundle::base.html.twig' %}

{% block body %}

<h2 class="">{{ 'Relatório de Softwares Inventariados'|trans }}</h2>
<h5>{{ 'Relatório gerado em'|trans }} {% if idioma == 'pt_BR' %}{{ "now"|date("d/m/Y H\\hi") }}{% else %}{{ "now"|date("m/d/Y H\\hi") }}{% endif %}</h5>

<hr />
    <form id="csv" action="{{ path('cacic_relatorio_software_inventariados_csv') }}" method="post">
        {% for reg in dados %}
            <input type="hidden" name="idSoftware[]" value="{{ reg['idRelatorio'] }}">
            <input type="hidden" name="idLocal[]" value="{{ reg['idLocal'] }}">
            <input type="hidden" name="idRede[]" value="{{ reg['idRede'] }}">
        {% endfor %}
        <button class="btn btn-primary" type="submit">
            <i class="icon-bar-chart"></i>
            Gerar CSV
        </button>
    </form>
    <br>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th width="72%" style="text-align: center">{{ "Software"|trans }}</th>
            <th width="23%" style="text-align: center">{{ "Total de Estações" }}</th>
            <th width="5%"></th>
        </tr>
        </thead>
        <tbody>
            {% for software in totalnumcomp|keys %}
                <tr>
                    <td><a href="{{ path('cacic_relatorio_software_detalhar', {'nomeRelatorio': software}) }}" title="{{ "Detalhar software"|trans }}" target="_blank">{{ software }}</a></td>
                    <td style="text-align: center;">{{ totalnumcomp[software] }}</td>
                    <td style="text-align: center;">
                        <a class="btn" href="{{ path('cacic_relatorio_software_detalhar', {'nomeRelatorio': software}) }}" title="{{ "Detalhar software"|trans }}" target="_blank">
                            <i class="icon-search"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <br>
    <table class="display datatable" id="datatable">
	<thead>
	    <tr>
			<th width="5%" style="text-align: center"></th>
	    	<th width="20%">{{ "Software"|trans }}</th>
	    	<th width="25%">{{ "Local"|trans }}</th>
            <th width="10%">{{ "Ip da Rede"|trans }}</th>
            <th width="15%">{{ "Nome da Rede"|trans }}</th>
	        <th width="10%" style="text-align: center">{{ "Máquinas"|trans }}</th>
            <th style="text-align: center;" width="5%"></th>
	    </tr>
	</thead>
	
	<tbody>
	
	    {% for reg in dados %}
	
        <tr>
			<td style="text-align: center">{{ loop.index }}</td>
            <td><a href="{{ path('cacic_relatorio_software_detalhar', {'idRelatorio': reg.idRelatorio}) }}" title="{{ "Relatório de coletas do software"|trans }}" target="_blank">{{ reg['nomeRelatorio'] }}</a></td>
            <td><a href="{{ path('cacic_relatorio_software_detalhar', {'idRelatorio': reg.idRelatorio, 'idLocal': reg.idLocal }) }}" title="{{ "Relatório de coletas do software no local"|trans }}" target="_blank">{{ reg['nmLocal'] }}</a></td>
            <td><a href="{{ path('cacic_relatorio_software_detalhar', {'idRelatorio': reg.idRelatorio, 'idLocal': reg.idLocal, 'idRede': reg.idRede }) }}" title="{{ "Relatório de coletas do software na rede"|trans }}" target="_blank">{{ reg['teIpRede'] }} </a></td>
            <td><a href="{{ path('cacic_relatorio_software_detalhar', {'idRelatorio': reg.idRelatorio, 'idLocal': reg.idLocal, 'idRede': reg.idRede }) }}" title="{{ "Relatório de coletas do software na rede"|trans }}" target="_blank">{{ reg['nmRede'] }}</a></td>
            <td style="text-align: center"><a href="{{ path('cacic_relatorio_software_detalhar', {'idRelatorio': reg.idRelatorio, 'idLocal': reg.idLocal, 'idRede': reg.idRede }) }}" title="{{ "Relatório de coletas do software na rede"|trans }}" target="_blank">{{ reg['numComp'] }}</a></td>
            <td style="text-align: center;">
                <a class="btn" href="{{ path('cacic_relatorio_software_detalhar', {'idRelatorio': reg.idRelatorio, 'idLocal': reg.idLocal, 'idRede': reg.idRede }) }}" title="{{ "Detalhar coletas do software"|trans }}" target="_blank">
                    <i class="icon-search"></i>
                </a>
            </td>
        </tr>

    	{% else %}
        <tr>
            <td style="text-align: center" colspan="3"><b>{{ "NENHUM REGISTRO ENCONTRADO!"|trans }}</b></td>
        </tr>
		{% endfor %}

   </tbody>
</table>


{% endblock %}