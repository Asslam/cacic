{% extends 'CacicCommonBundle::base.html.twig' %}

{% block breadcrumb %}
    <li class="active">{{ 'Sistemas Operacionais'|trans }}</li>
{% endblock %}

{% block body %}

    <div class="row-fluid">

        <div class="span8">
            <div class="box grad_colour_black">

                <h2 class="box_head round_top"><i class="icon-search"></i> {{'Relatório de Sistemas Operacionais' |trans }}</h2>

                <div class="block box_content round_bottom padding_10">

                    <h4>{{ "Selecione os Sistemas Operacionais"|trans }}</h4><br />

                    <form id="{{ 'formFaturamento'|trans }}" action="{{ path('cacic_relatorio_so_listar') }}" class="form-horizontal" method="POST" target="_blank">

                        <div class="control-group">

                            <div class="controls">
                                <input type="checkbox" class="toggleCheck" name="toggleCheck[]" value="id.Local" id="toggleLocal">
                                <label for="toggleLocal"><b>{{ 'Marcar/desmarcar tudo'|trans }}</b></label>
									<div style="overflow: auto;">

											<div class="modulo-opt-block">
											{{ form_widget(form.idLocal, {'form_type': 'horizontal'}) }}
											</div>
									</div>
							</div>
                        </div>

                        <div class="control-group">
                            <div class="controls">
                                <button type="reset" class="btn">
                                    <i class="icon-refresh"></i>
                                    {{ "Resetar"|trans }}
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="icon-search"></i>
                                    {{ 'Gerar relatório'|trans }}
                                </button>
                                <button type="submit" class="btn btn-success" formaction="{{ path('cacic_relatorio_so_listar_csv') }}">
                                    <i class="icon-download-alt"></i>
                                    {{'Gerar CSV'|trans  }}
                                </button>
                                {#<button type="submit" class="btn btn-success" formaction="{{ path('cacic_arquivo_sgconf') }}">
                                    <i class="icon-search"></i>
                                    {{'Faturamento Serpro'|trans  }}
                                </button>#}
                            </div>
                        </div>

                    </form>
                </div> <!-- /block -->
            </div> <!-- /box -->
        </div> <!-- /span8 -->

        <div class="span4">
            <div class="box grad_colour_black">

                <h2 class="box_head round_top"><i class="icon-info-sign"></i> {{ "Informações Adicionais"|trans }}</h2>

                <div class="block box_content round_bottom padding_10">
                    <p>
                        {{ "Relatório de Sistemas Operacionais"|trans }}.
                    </p>
                    <p>
                        {{ "Não selecionar nenhum valor em determinado critério é o mesmo que selecionar todos"|trans }}.
                    </p>
                    <p>
                        {{ "O botão CSV gera o relatório para todos os sistemas oepracionais" }}
                    </p>
                </div> <!-- /block -->
            </div> <!-- /box -->
        </div> <!-- span4 -->

    </div> <!-- /row -->

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        System.Form.toggleCheck(); // Ativa o monitoramento de Clique no checkbox para marcar/desmarcar todos
    </script>

{% endblock %}